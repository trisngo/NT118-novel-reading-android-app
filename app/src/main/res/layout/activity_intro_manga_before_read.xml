<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_intro_manga"
    tools:context=".intro_manga_before_read">

    <TextView
        android:id="@+id/dsc"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:background="@drawable/border"
        android:scrollbars="vertical"
        android:text="DESCRIPTION"
        android:textSize="24dp"
        android:layout_below="@+id/line_gray"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/line_blue"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#1A5FAA"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/thumbnailintro">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#061729"
        android:layout_below="@id/tvdsc"
        android:layout_marginTop="10dp">
    </RelativeLayout>

    <ImageView
        android:id="@+id/like_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:srcCompat="@drawable/icon_like"
        android:layout_below="@+id/line_blue"
        android:layout_toRightOf="@id/tvdsc"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:text="Author:  "
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/thumbnailintro"
        android:layout_below="@+id/chapter"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvNameManga"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:text="Name manga"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/thumbnailintro"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/category"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="Categories:  "
        android:textSize="22dp"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/thumbnailintro"
        android:layout_below="@id/tvNameManga"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnRead_Manga"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_corner"
        android:text="Đọc truyện"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/dsc"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/chapter"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="Chapters:  "
        android:textSize="22dp"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/thumbnailintro"
        android:layout_below="@id/category"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/thumbnailintro"
        android:layout_width="175dp"
        android:layout_height="230dp"
        android:background="@drawable/co_gai_trong_rung"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvdsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="CONTENT:"
        android:textSize="28dp"
        android:layout_below="@id/line_blue"
        android:layout_marginLeft="39dp"/>

    <ImageView
        android:id="@+id/imagedsc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_baseline_description_24"
        android:layout_below="@id/line_blue"
        android:layout_marginTop="18dp"/>

</RelativeLayout>