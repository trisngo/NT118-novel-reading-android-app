<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_group"
        android:background="#47B5FF"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:id="@+id/tv_profile"
            android:gravity="center"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/corgi"
            android:layout_marginTop="20dp"
            android:id="@+id/avatar"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:id="@+id/information_group"
        app:layout_constraintTop_toBottomOf="@+id/profile_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/profile_group"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="NotSibling"
            android:id="@+id/name_group"
            android:paddingBottom="20dp"
            android:paddingTop="50dp"
            >

        <ImageView
            android:layout_width="130px"
            android:layout_height="130px"
            android:src="@drawable/man"
            android:id="@+id/username_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_username"
            android:padding="10dp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/username_icon"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/name_group"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="NotSibling"
            android:id="@+id/mail_group"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            >

        <ImageView
            android:layout_width="130px"
            android:layout_height="130px"
            android:id="@+id/email_icon"
            android:src="@drawable/email_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_email"
            android:padding="10dp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/email_icon"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mail_group"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="NotSibling"
            android:id="@+id/liked_books_group"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            >


        <ImageView
            android:layout_width="130px"
            android:layout_height="130px"
            android:id="@+id/read_book_icon"
            android:src="@drawable/stack_of_books"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="NotSibling"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_read_books"
            android:padding="10dp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/read_book_icon"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/information_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">



        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/heart"
            android:scaleType="fitCenter"
            android:background="@drawable/rounded_corner_button"
            android:adjustViewBounds="true"
            android:id="@+id/liked_books_button"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/settings"
            android:scaleType="fitCenter"
            android:background="@drawable/rounded_corner_button"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:id="@+id/setting_button"
            android:layout_marginRight="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/exit"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:background="@drawable/rounded_corner_button"
            android:adjustViewBounds="true"
            android:id="@+id/exit_button"
            android:foreground="?android:attr/selectableItemBackground"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>